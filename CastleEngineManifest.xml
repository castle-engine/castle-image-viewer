<?xml version="1.0" encoding="utf-8"?>
<project name="castle-image-viewer"
  standalone_source="castle_image_viewer.dpr"
  author="Michalis Kamburelis">
  <icons>
    <icon path="freedesktop/castle-image-viewer.svg" />
    <icon path="freedesktop/castle-image-viewer.png" />
    <icon path="freedesktop/castle-image-viewer.ico" />
  </icons>
  <dependencies>
    <dependency name="Png" /> <!-- read .png -->
    <!-- dependency name="Https" /> <!- - read https links -->
  </dependencies>
  <version value="2.3.0" />
  <package>
    <include path="README.md" />
    <include path="COPYING.GPL2.txt" />
    <include path="freedesktop/*" recursive="True" />
    <include path="libtiff.dll" />
    <include path="run.sh" />
    <include path="libraries/x86_64-linux/" recursive="True" />
  </package>
  <data exists="false" />
  <compiler_options>
    <search_paths>
      <path value="code/" />
    </search_paths>
    <custom_options>
      <!-- Test PNG reading using FpImage (when we don't use libpng). -->
      <!-- <option>-dCASTLE_DISABLE_LIBPNG</option> -->
    </custom_options>
  </compiler_options>

  <!-- Generated by macosx/utils/output_document_types.lpr -->
  <associate_document_types>
    <document_type caption="PNG image" name="png">
      <extension>png</extension>
      <mime>image/png</mime>
    </document_type>
    <document_type caption="Windows BMP image" name="bmp">
      <extension>bmp</extension>
      <mime>image/bmp</mime>
    </document_type>
    <document_type caption="JPEG image" name="jpg">
      <extension>jpg</extension>
      <extension>jpeg</extension>
      <extension>jpe</extension>
      <mime>image/jpeg</mime>
      <mime>image/jpg</mime>
    </document_type>
    <document_type caption="GIF image" name="gif">
      <extension>gif</extension>
      <mime>image/gif</mime>
    </document_type>
    <document_type caption="TarGA image" name="tga">
      <extension>tga</extension>
      <extension>tpic</extension>
      <mime>image/x-targa</mime>
      <mime>image/x-tga</mime>
    </document_type>
    <document_type caption="XPM image" name="xpm">
      <extension>xpm</extension>
      <mime>image/x-xpixmap</mime>
    </document_type>
    <document_type caption="PSD image" name="psd">
      <extension>psd</extension>
      <mime>image/photoshop</mime>
      <mime>image/x-photoshop</mime>
      <mime>image/psd</mime>
      <mime>application/photoshop</mime>
    </document_type>
    <document_type caption="ZSoft PCX image" name="pcx">
      <extension>pcx</extension>
      <mime>image/pcx</mime>
      <mime>application/pcx</mime>
      <mime>application/x-pcx</mime>
      <mime>image/x-pc-paintbrush</mime>
      <mime>image/x-pcx</mime>
    </document_type>
    <document_type caption="PNM image" name="pnm">
      <extension>pnm</extension>
      <extension>pgm</extension>
      <extension>pbm</extension>
      <extension>ppm</extension>
      <mime>image/x-portable-anymap</mime>
      <mime>image/x-portable-graymap</mime>
      <mime>image/x-pgm</mime>
      <mime>image/x-portable-bitmap</mime>
      <mime>image/pbm</mime>
      <mime>image/x-pbm</mime>
    </document_type>
    <document_type caption="DDS image" name="dds">
      <extension>dds</extension>
      <mime>image/x-dds</mime>
    </document_type>
    <document_type caption="Khronos KTX image" name="ktx">
      <extension>ktx</extension>
      <mime>image/ktx</mime>
    </document_type>
    <document_type caption="ASTC image" name="astc">
      <extension>astc</extension>
      <mime>image/astc</mime>
    </document_type>
    <document_type caption="RGBE (Radiance, HDR) image" name="rgbe">
      <extension>rgbe</extension>
      <extension>pic</extension>
      <extension>hdr</extension>
      <mime>image/vnd.radiance</mime>
    </document_type>
    <document_type caption="IPLab image" name="ipl">
      <extension>ipl</extension>
      <mime>image/x-ipl</mime>
    </document_type>
    <document_type caption="JPEG 2000 image" name="jp2">
      <extension>jp2</extension>
      <mime>image/jp2</mime>
      <mime>image/jpeg2000</mime>
      <mime>image/jpeg2000-image</mime>
      <mime>image/x-jpeg2000-image</mime>
    </document_type>
  </associate_document_types>
</project>
